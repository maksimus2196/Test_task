doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Twitter
        script src = "JS/bower_components/jquery/dist/jquery.min.js"
        link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
        link(rel='stylesheet', type='text/css', href='stylesheets/reset.css')
    body
        .form
            h1 Log In
            .topLine
            form( method='POST')
                .field
                    p
                        label(for='login') Your email or username
                    input#login(type='text', name='Login', maxlength='20', placeholder='Ваше имя')
                .field2
                    p
                        label(for='password') Your password
                    input#password.input(type='password', name='password', placeholder='Введите пароль')
                    br
                button.Login(type='submit') Login
                .footer
                    p Not a member yet ?
                    button.register(href='register') Join us
script.
    $(document.forms['Log in']).on('submit', function () {
        var form = $(this);
        $('.error', form).html('');
        $(":submit", form).button("Login");
        $.ajax({
            url: "/login",
            data: form.serialize(),
            method: "POST",

            statusCode: {
                200: function () {
                    form.html("Вы вошли в сайт").addClass('alert-success');
                    window.location.href = "/chat";
                },
                403: function (jqXHR) {
                    var error = JSON.parse(jqXHR.responseText);
                    $('.error', form).html(error.message);
                }
            }
        });
        return false;
    });
