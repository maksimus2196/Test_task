doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Twitter
        script src = "JS/bower_components/jquery/dist/jquery.min.js"
        link(rel='stylesheet', type='text/css', href='stylesheets/style.css')
        link(rel='stylesheet', type='text/css', href='stylesheets/reset.css')
    body
        .form
            h1 Log In
            .topLine
            form( method='POST')
                .field
                    p
                        label(for='username') Your email or username
                    input#login(type='text', name='Login', maxlength='20', placeholder='Логин')
                    .field
                    p
                        label(for='email') Your email or username
                    input#login(type='email', name='email', maxlength='50', placeholder='Почта')

                .field2
                    p
                        label(for='password') Your password
                    input#password.input(type='password', name='password', placeholder='Введите пароль')
                    br
                button.Login(type='submit',data-loading-text="Отправляю...") Login

                .footer
                    p Not a member yet ?
                    button.Join(type='submit') Join us
script.
    $(document.forms['Log In']).on('submit', function () {
        var form = $(this);
        $('.error', form).html('');
        $(":submit", form).button("Login");
        $.ajax({
            url: "/login",
            method: "POST",
            complete: function () {
                $(":submit", form)
            },
            statusCode: {
                200: function () {
                    window.location.href = "/users";
                },
                403: function (jqXHR) {
                    var error = JSON.parse(jqXHR.responseText);
                    $('.error', form).html(error.message);
                }
            }
        });
        return false;
    });
